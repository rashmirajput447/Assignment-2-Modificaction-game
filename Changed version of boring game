#include <conio.h>
#include <windows.h>
#include <stdlib.h>
#include <time.h>
#include <stdio.h>

int main() {
    srand(time(0));

    int x = 1;              // player position (0 to 2)
    int step = 0;           // obstacle vertical movement
    int obstaclePos = rand() % 3;   // 0,1,2 lane
    int score = 0;          // player score
    int lives = 3;          // player lives
    int speed = 120;        // initial speed (in milliseconds)

    while (1) {

        // ---- INPUT ----
        if (_kbhit()) {
            char ch = getch();

            if (ch == 75 && x > 0)        // LEFT arrow
                x--;

            if (ch == 77 && x < 2)        // RIGHT arrow
                x++;
        }

        // ---- DRAW ----
        system("cls");
        printf("|--- --- ---|\n");

        for (int i = 0; i < 10; i++) {
            if (i == step) {
                if (obstaclePos == 0)
                    printf("| %c        |\n", 1);
                else if (obstaclePos == 1)
                    printf("|     %c    |\n", 1);
                else if (obstaclePos == 2)
                    printf("|        %c |\n", 1);
            } else {
                printf("|           |\n");
            }
        }

        // ---- PLAYER ----
        if (x == 0)
            printf("| %c        |\n", 6);
        else if (x == 1)
            printf("|     %c    |\n", 6);
        else if (x == 2)
            printf("|        %c |\n", 6);

        // ---- DISPLAY SCORE & LIVES ----
        printf("\nScore: %d  Lives: %d\n", score, lives);

        // ---- COLLISION ----
        if (step == 10) {
            if (x == obstaclePos) {
                lives--;
                printf("\nHIT! Lives left: %d\n", lives);
                Sleep(500);

                if (lives == 0) {
                    printf("\nGAME OVER!\nFinal Score: %d\n", score);
                    break;
                }
            } else {
                score++;           // increase score if avoided
                if (score % 5 == 0 && speed > 30) // increase difficulty every 5 points
                    speed -= 10;
            }
        }

        Sleep(speed);

        // Move obstacle down
        step++;

        // Reset when reaches bottom
        if (step > 10) {
            step = 0;
            obstaclePos = rand() % 3; // new lane
        }
    }

    return 0;
}
